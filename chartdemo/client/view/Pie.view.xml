<core:View xmlns:core="sap.ui.core"
		   xmlns:mvc="sap.ui.core.mvc"
		   xmlns:l="sap.ui.layout"
		   xmlns="sap.m"
		controllerName="chart_demo.view.Pie"
		xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Pie Chart" class="sapUiFioriObjectPage"
		showNavButton="{device>/isPhone}" navButtonPress="handleNavButtonPress"
		navButtonTap="onBackButtonPress">
		<l:VerticalLayout class="panelBoxContainer sapUiFioriObjectPage"
			width="100%">
			<l:content>
				<Panel>
					<headerToolbar>
						<Toolbar>
							<Label text="Pie Chart" />
						</Toolbar>
					</headerToolbar>
					<FlexBox id="PieChartHolder" alignItems="Start"
						justifyContent="Center"></FlexBox>
				</Panel>

			</l:content>
		</l:VerticalLayout>
	</Page>
</core:View>
